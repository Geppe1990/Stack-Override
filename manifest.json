{
    "name": "stackoverride",
    "version": "1.0",
    "description": "Trova la migliore risposta su Stack Overflow!",
    "manifest_version": 2,
    "permissions": ["storage", "declarativeContent", "activeTab"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "content_scripts": [{
        "matches": ["*://stackoverflow.com/questions/*"],
        "run_at": "document_idle",
        "css": ["./node_modules/tingle.js/dist/tingle.min.css", "./dist/css/style.min.css"],
        "js": ["./node_modules/tingle.js/dist/tingle.min.js", "dist/js/contentScript.min.js"]
    }]
}